
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }
    
    // A more permissive rule for development:
    // Allow any authenticated user to read and write to any document.
    // WARNING: This is not secure for production. In production, you should
    // implement more granular rules for each collection.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
